<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="mbg_jdbc.properties" />

    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
		<property name="javaFileEncoding" value="UTF-8"/> 
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <plugin type="${mapper.plugin}">
          <property name="mappers" value="${mapper.Mapper}"/>
        </plugin>

        <jdbcConnection driverClass="${jdbc.driverClass}"
                        connectionURL="${jdbc.url}"
                        userId="${jdbc.user}"
                        password="${jdbc.password}">
        </jdbcConnection>

        <javaModelGenerator targetPackage="com.example.diymysqlms.entity" targetProject="src/main/java"/>
        <sqlMapGenerator targetPackage="com.example.diymysqlms.mapper" targetProject="src/main/java"/>
        <javaClientGenerator targetPackage="com.example.diymysqlms.dao" targetProject="src/main/java" type="XMLMAPPER"/>
		
        <table schema="mlgb" tableName="camp_new_member" ></table>


    </context>
</generatorConfiguration>